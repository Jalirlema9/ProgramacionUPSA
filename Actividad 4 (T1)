C++

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main ()
{
	float x1, y1, x2, y2, Y, X, dist;
	cout<<"Saludos usuario, este programa calcula la distancia entre dos puntos de un plano."<<endl;
	cout<<"Ahora, escribe la posicion del primer punto: "<<endl;
	cout<<"Posicion en X: ";
    cin>>x1;
	cout<<"Posicion en Y: ";
	cin>>y1;
	cout<<"Ahora, escribe la posicion del segundo punto: "<<endl;
	cout<<"Posicion en X: ";
	cin>>x2;
	cout<<"Posicion en Y: ";
	cin>>y2;
	Y=y2-y1;
	X=x2-x1;
	dist=sqrt(pow(Y,2)+pow(X,2));
	cout<<"La distancia que existe entre los dos puntos es de: "<<dist<< " unidades"<<endl;
	cout<<"Gracias por usar este programa, pulsa cualquier tecla para salir"<<endl;

	getch();
}

